<form action="/result" method="GET" class="form-inline">
  <div class="form-group">
    <input name="current_city" type="text" id="current_city" placeholder="Your current city?" class="form-control" required>
  </div>
  <div class="form-group" >
    <input name="destination_city" type="text" id="destination_city" placeholder="Your next city?" class="form-control" required>
  </div>
  <div class="form-group" id="form-group-1">
    <input name="monthly_spending" type="text" id="monthly_spending" placeholder="Your monthly spending" class="form-control" required>
  </div>
  <br><br>
  <div class="button-wrapper">
  <div class="profile-form">
  <!-- <div class="form-group" > -->
    <% @emoji_for_profiles.each do |k,v| %>
        <% if k == "worker" %>
        <label class="btn btn-primary profile">
        <input class="form-check-input" name="user_profile" type="radio" id="myuserprofile-<%= k %>" value="<%= k %>" >
          <%= v.html_safe%><%=k.capitalize%>
        </label>
        <% else %>
        <label class="btn btn-primary profile">
        <input class="form-check-input" name="user_profile" type="radio" id="myuserprofile-<%= k %>" value="<%= k %>">
          <%= v.html_safe%><%=k.capitalize%>
        </label>
      <% end %>
    <% end %>
  <!-- </div> -->
</div>
</div>
  <br><br>
  <input type="submit" value="Compare" class="btn btn-primary">
</form>

<%= content_for :after_js do %>
<script>
  $(".profile").on("click", function(){
    $(".profile").removeClass("active");
    $(this).addClass("active");
  });
</script>
<% end %>

