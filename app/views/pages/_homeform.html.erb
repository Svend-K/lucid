<form action="/result" method="GET" class="form-inline">
  <div class="form-group">
    <input name="current_city" type="text" id="current_city" placeholder="Your current city?" class="form-control" required>
  </div>
  <div class="form-group">
    <input name="destination_city" type="text" id="destination_city" placeholder="Your next city?" class="form-control" required>
  </div>
  <div class="form-group">
    <input name="monthly_spending" type="text" id="current_city" placeholder="EUR monthly spending" class="form-control" required>
  </div>
  <div class="form-group">
    <select class="form-control" name="user_profile">
      <% @emoji_for_profiles.each do |k,v| %>
      <option class="option" value="<%= k %>"><%= v.html_safe %></option>
      <% end %>
    </select>
  </div>


  <br><br>
  <input type="submit" value="Compare" class="btn btn-primary">
</form>
