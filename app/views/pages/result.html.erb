<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h2>Lucid's reccomendation engine reccomends <%=@recommended_city.capitalize%> based on your preferences</h2>
      <div class="content-box">
        <div class="content">
          <h2>Quality of life</h2>
          <%= line_chart [
              {name: @current_city.name, data: @current_city_graph_lifequality},
              {name: @destination_city.name, data: @destination_city_graph_lifequality}
            ]
          %>
        </div>
        <div class="content">
          <h2>Cost and PP</h2>
          <%= line_chart [
              {name: @current_city.name, data: @current_city_graph_quantitative},
              {name: @destination_city.name, data: @destination_city_graph_quantitative}
            ]
          %>
        </div>
    </div>
  </div>
</div>

<%= @current_city.name %>

<% @current_city.cities_factor.each do |f| %>
  <p><%= f.factor.name %></p>
  <p><%= f.score %></p>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= f.score*100 %>%;">
      <span class="sr-only">60% Complete</span>
    </div>
  </div>
<% end %>
