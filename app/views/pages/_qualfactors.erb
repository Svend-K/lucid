<span id="facts" class="page-size">
<div class="page-wrapper" >
  <div class="container">
    <div class="title">
      <h1>Important factors for a <%=@user_profile%></h1>
    </div>
    <div class="row">


      <% @qual_data_user_profile[0][:data].each do |factor, data| %>


      <div class="col-xs-12 col-md-6 qualitative-factor">
        <div class="table">
          <div class="table-image">
          <%= image_tag("icons8/#{data[:icon_name]}.png") %>
          </div>
          <div class="table-text">
            <p><%= factor %></p>
          </div>
        </div>
        <div class="progress-bars">
          <div class="progress">
            <% if data[:score].nil? %>
            <% curr_city_score = rand(0.0..1.0) %>
            <% else %>
            <% curr_city_score = data[:score] %>
            <% end %>
            <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= (curr_city_score*100).round(0).to_s %>%;">
              <%= (curr_city_score*100).round(0).to_s %>%
            </div>
          </div>
          <div class="progress">
            <% if @qual_data_user_profile[1][:data][factor].nil? %>
            <% dest_city_score = rand(0.0..1.0) %>
            <% else %>
            <% dest_city_score = @qual_data_user_profile[1][:data][factor][:score] %>
            <% end %>
            <div class="progress-bar progress-bar-danger progress-bar-striped" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= (dest_city_score*100).round(0).to_s %>%;">
              <%= (dest_city_score*100).round(0).to_s %>%
            </div>
          </div>
        </div>
      </div>


      <% end %>

    </div>
  </div>

</div>
<a href="#costs" class="scrolldown-button">
    <i class="fa fa-chevron-down" aria-hidden="true"></i>
  </a>
</span>
